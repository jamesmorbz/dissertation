    "version": "0.2.0",
    "configurations": [
        {
            "name": "Frontend",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["start"],
            "console": "integratedTerminal"
        },
        {
            "name": "Backend",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": ["main:app","--reload"],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal"
        },
        {
            "name": "MQTT Scraper",
            "type": "debugpy",
            "request": "launch",
            "program": "write_mqtt_to_influx.py",
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal"
        },
        {
            "name": "AutoPlugConfiguration",
            "type": "debugpy",
            "request": "launch",
            "program": "automatic_smartplug_config.py",
            "cwd": "${workspaceFolder}/misc",
            "console": "integratedTerminal"
        }
    ]
}